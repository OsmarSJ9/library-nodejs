<% include layouts/header.ejs %>

    <div class="container">
        <h1>
            <%= title %>
        </h1>

        <div class="row">
            <% for(let i=0; i < books.length; i++) { %>
                <div class="col-sm-3">
                    <div class="card">
                        <img src="<%= books[i].imagen%>" class="card-img-top" alt="..." width="200px">

                        <div class="card-body">
                            <h5 class="card-title"><%= books[i].title %></h5>
                            <p class="card-text"><%= books[i].description %><br>
                                <h5>$<%= books[i].price%></h5>
                            </p>
                            <a href="#" class="btn btn-primary">View</a>
                        </div>
                    </div>
                </div>
                
            <% } %>
        </div>
        
    </div>



    <% include layouts/footer.ejs %>